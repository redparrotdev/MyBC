<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyBC.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MyBC.App.MVVM.Views"
    xmlns:local="clr-namespace:MyBC.App"
    Shell.FlyoutBehavior="Disabled"
    Title="MyBC.App">

    <ShellContent Title="Home" ContentTemplate="{DataTemplate views:HomePage}"/>
    <ShellContent Title="Sign Up" ContentTemplate="{DataTemplate views:SignUpPage}" FlyoutItemIsVisible="False"/>
    <ShellContent Title="Sign In" ContentTemplate="{DataTemplate views:SignInPage}" FlyoutItemIsVisible="False"/>


</Shell>
